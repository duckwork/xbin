#!/bin/dash
# Return a point, In Regard To Window

. $WMRC
ARGS="<tl|tr|bl|br|md> <wid>"

test $# -eq 2 || usage $ERRARG;
corner=$1; wid=$2;

gwc w $wid;

case $corner in
    tl*) x=$wx; y=$wy;                           ;;
    tr*) x=$((wx + ww)); y=$wy;                  ;;
    bl*) x=$wx; y=$((wy + wh));                  ;;
    br*) x=$((wx + ww)); y=$((wy + wh));         ;;
    md*) x=$((wx + ww / 2)); y=$((wy + wh / 2)); ;;
    *)  usage $ERRARG "Unknown argument: $1";    ;;
esac

printf '%s\t%s\n' $x $y;
